{
  "name": "jsonfile",
  "version": "5.0.0",
  "description": "Easily read/write JSON files.",
  "repository": {
    "type": "git",
    "url": "git@github.com:jprichardson/node-jsonfile.git"
  },
  "keywords": [
    "read",
    "write",
    "file",
    "json",
    "fs",
    "fs-extra"
  ],
  "author": "JP Richardson <jprichardson@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "amonad": "^0.8.2",
    "universalify": "^0.1.2"
  },
  "optionalDependencies": {
    "graceful-fs": "^4.1.6",
    "@types/graceful-fs": "^4.1.3"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "mocha": "^5.2.0",
    "rimraf": "^2.4.0",
    "standard": "^12.0.1",
    "prettier": "^1.16.1",
    "@types/node": "^12.0.4",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  },
  "main": "dist/index.js",
  "files": [
    "dist/index.js"
  ],
  "scripts": {
    "test": "mocha --recursive --require ts-node/register \"test/**/*.test.ts\"",
    "prepack": "npm run build",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && tsc -p tsconfig.json",
    "lint": "tslint -c tslint.json 'index.ts' && tslint -c tslint.json 'test/**.*.ts'"
  }
}
